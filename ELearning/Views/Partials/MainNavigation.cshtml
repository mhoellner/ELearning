@using ELearning.Extensions
@inherits UmbracoTemplatePage

<header id="page-header" class="container header">
    <div class="container background-red">
        <div class="row align-items-center">
            <div class="col-md-10">
                <a class="logo" href="/" title="Startseite">
                    <img src="@ItemExtensions.RootItem().SiteLogo" class="logo vertical-center" alt="logo" />
                </a>
            </div>

            <div class="col-md-2 background-grey">
                <div class="login-form">
                    <form class="" method="post" action="/Logged-In">
                        <div id="login-form">
                            <input id="inputName" class="span2" type="text" name="username" placeholder="Anmeldename">
                            <input id="inputPassword" class="span2" type="password" name="password" placeholder="Kennwort">
                            <input type="submit" id="submit" name="submit" value="&#xf04b;" class="fa" /> <!--Fontawsome per Unicode in Button einbinden.-->
                        </div>
                    </form>
                </div>
            </div>
        </div>  <!-- end of row -->
    </div>  <!-- end of container -->
</header>
